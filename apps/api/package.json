{
  "name": "api",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "ba:generate": "pnpm dlx @better-auth/cli generate --output src/lib/auth/schema.ts -y",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "d1:migrate": "wrangler d1 migrations apply kiru-db",
    "d1:migrate-remote": "wrangler d1 migrations apply kiru-db --remote"
  },
  "dependencies": {
    "@libsql/client": "^0.15.12",
    "better-auth": "^1.3.7",
    "drizzle-orm": "^0.44.4",
    "hono": "^4.9.4",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250822.0",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.4",
    "wrangler": "^4.4.0"
  }
}
